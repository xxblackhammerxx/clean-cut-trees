{
  "name": "clean-cut-trees",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "build:analyze": "cross-env ANALYZE=true NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "build:perf": "npm run optimize-images && npm run build",
    "dev": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html --chrome-flags=\"--headless\"",
    "optimize-images": "node scripts/optimize-images.mjs",
    "optimize-critical-images": "node scripts/optimize-critical-images.mjs",
    "perf-audit": "npm run lighthouse && npm run build:analyze",
    "clean-build": "rm -rf .next && npm run build",
    "perf-full": "npm run optimize-critical-images && npm run build:perf && npm run lighthouse",
    "verify-optimization": "node scripts/verify-optimization.mjs"
  },
  "dependencies": {
    "@payloadcms/db-postgres": "3.55.0",
    "@payloadcms/email-resend": "3.55.0",
    "@payloadcms/next": "3.55.0",
    "@payloadcms/payload-cloud": "3.55.0",
    "@payloadcms/richtext-lexical": "3.55.0",
    "@payloadcms/ui": "3.55.0",
    "@types/marked": "^6.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "16.4.7",
    "graphql": "^16.11.0",
    "gray-matter": "^4.0.3",
    "marked": "^16.2.1",
    "next": "15.4.4",
    "payload": "3.55.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "0.34.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "1.54.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/react": "16.3.0",
    "@types/node": "^22.18.1",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react": "4.5.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.4.4",
    "jsdom": "26.1.0",
    "playwright": "1.54.1",
    "playwright-core": "1.54.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.20.5",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ]
  }
}
